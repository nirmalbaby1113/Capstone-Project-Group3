<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    app:cardBackgroundColor="@color/card_background"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp"
    app:cardMaxElevation="10dp"
    app:cardPreventCornerOverlap="true"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="start"
            >

            <TextView
                android:id="@+id/cardEarnings"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Earn"
                android:layout_weight="1"
                android:textColor="@color/white_text"
                android:fontFamily="@font/poppinsmedium"
                android:background="@drawable/round_button_blue"
                android:textSize="13sp"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:gravity="center"/>

            <Space
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/cardPriority"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Priority"
                android:textSize="13sp"
                android:layout_weight="1"
                android:gravity="center"
                android:textColor="@color/white_text"
                android:fontFamily="@font/poppinsmedium"
                android:background="@drawable/round_button_red"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                />
        </LinearLayout>

        <TextView
            android:id="@+id/cardTaskTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Task title goes here."
            android:fontFamily="@font/poppinsmedium"
            android:layout_marginTop="14dp"
            android:textColor="@color/white_text"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="14dp"
            >

            <TextView
                android:id="@+id/cardUserName"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Nirmal Baby"
                android:layout_weight="1"
                android:fontFamily="@font/poppinslight"
                android:textColor="@color/white_text"
                />

            <TextView
                android:id="@+id/cardDistance"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_weight="1"
                android:textSize="12sp"
                android:fontFamily="@font/poppinslight"
                android:textColor="@color/grey_hint_color"
                android:gravity="center"
                />

            <TextView
                android:id="@+id/cardMoreInfo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="More Info..."
                android:layout_weight="1"
                android:gravity="end"
                android:fontFamily="@font/poppinssemibold"
                android:textColor="@color/blue_primary"
                />

        </LinearLayout>




    </LinearLayout>

</androidx.cardview.widget.CardView>