<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/blue_primary_light_less_opacity"
    app:cardCornerRadius="8dp"
    app:cardElevation="8dp"
    app:cardMaxElevation="10dp"
    android:layout_marginTop="5dp"
    app:cardPreventCornerOverlap="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="7dp">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="0.1"
            android:src="@drawable/card_image"
            android:layout_gravity="center"
            />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_weight="0.7"
            android:padding="7dp">

            <TextView
                android:id="@+id/savedCardInfoNumber"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Visa...1234"
                android:fontFamily="@font/poppinsmedium"
                android:textColor="@color/black_background"
                />

            <TextView
                android:id="@+id/savedCardInfoExpires"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Expires 04/2028"
                android:fontFamily="@font/poppinsmedium"
                android:textColor="@color/black_background"
                />

        </LinearLayout>

        <ImageView
            android:layout_width="0dp"
            android:layout_height="20dp"
            android:layout_weight="0.1"
            android:src="@drawable/tick_image"
            android:layout_gravity="center"
            />


    </LinearLayout>





</androidx.cardview.widget.CardView>