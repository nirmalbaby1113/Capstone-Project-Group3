<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_background">

    <ProgressBar
        android:id="@+id/loadingProgressBarCreatedTaskList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminateTint="@color/blue_primary"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"/>

    <TextView
        android:id="@+id/taskEmptyInfoTxtView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="No Task's Created Yet"
        android:layout_centerInParent="true"
        android:textColor="@color/white_text"
        android:fontFamily="@font/poppinslight"
        android:textSize="14sp"
        android:visibility="gone"
        />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerViewTaskHistoryInProgress"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:visibility="gone"
        android:background="@color/black_background"
        />

</RelativeLayout>